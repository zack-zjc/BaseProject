<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:id="@id/id_weex_title_container"
      android:layout_width="match_parent"
      android:fitsSystemWindows="true"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@id/id_weex_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_weex_navigation_back"/>

    <TextView
        android:id="@id/id_weex_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textColor="@color/color_weex_title_color"
        android:layout_width="wrap_content"
        android:layout_height="44dp"/>

    <ImageView
        android:id="@id/id_weex_menu_icon"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/icon_weex_more_setting"
        android:visibility="invisible"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <ImageView
        android:id="@id/id_weex_menu_custom_icon"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginEnd="12dp"
        android:visibility="invisible"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <TextView
        android:id="@id/id_weex_menu_text"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_weex_menu_color"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:layout_marginEnd="12dp"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"/>

  </RelativeLayout>

  <View
      android:layout_below="@id/id_weex_title_container"
      android:background="@color/color_weex_divider_color"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"/>

  <FrameLayout
      android:id="@id/id_weex_page_container"
      android:layout_below="@id/id_weex_title_container"
      android:layout_marginTop="0.5dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</RelativeLayout>